<h2>Create a new figure</h2>
<form action="/figures" method="POST">
  <p><label for="figure_name">Name:</label>
  <input type="text" name="figure[name]" id="figure_name" ></p>

  <p>Titles:<br>
    <% Title.all.each do |title| %>
      <label><%= title.name %></label>
      <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%= title.id %>">

    <% end %><br>Add a title:
    <input type="text" name="title[name]" id="new_title">
  </p>

  <p>Associated landmarks:<br>
    <% Landmark.all.each do |landmark| %>
    <label><%=landmark.name%></label>
      <input type="checkbox" name="figure[landmark_ids][]"  id="landmark_<%=landmark.id%>" value="<%=landmark.id%>">
      
    <%end%>
  <br><label>Add a landmark:</label>
    <input type="text" name="landmark[name]" id="new_landmark"><br>
    <label>Year complete:</label>
    <input type="text" name="landmark[year_completed]">
  </p>

  <input type="submit" value="Create New Figure" id="Create New Figure">
</form>