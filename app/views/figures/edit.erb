<h2>Edit figure <%=@figure.name%></h2>
<form action="/figures/<%= @figure.id %>" method="POST">
<input id="hidden" type="hidden" name="_method" value="patch">
  <p><label for="figure_name">Name:</label>
  <input type="text" id="figure_name" name="figure[name]" value="<%=@figure.name%>"></p>

  <p>Titles:<br>
    <% Title.all.each do |title| %>
      <label><%= title.name %></label>
      <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="<%= title.name %>" <%='checked' if @figure.titles.include?(title) %>>

    <% end %><br>Add a title:
    <input type="text" id="new_title" name="title[name]">
  </p>

  <p>Landmarks:<br>
    <% Landmark.all.each do |landmark| %>
    <label><%=landmark.name%></label>
      <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id %>" id="<%= landmark.name %>" <%='checked' if @figure.landmarks.include?(landmark) %>>
      
    <%end%>
  <br><label>Add a landmark:</label>
    <input type="text" id="new_landmark" name="landmark[name]">
  </p>

  <input type="submit" value="Edit Figure" id="Edit Figure">
</form>